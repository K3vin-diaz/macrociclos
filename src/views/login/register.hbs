<div class=" block mx-auto my-12 p-8 bg-blue w-1/3 border border-gray-200 rounded-lg
shadow-lg text-gray-800 ">
    <h1 class="text-3xl font-bold mb-8 text-center">Register</h1>

    <form action="" method="POST" class="mt-4">



        <input type="text" name="name" placeholder="Name"
            class="bg-white-500 text-black px-4 py-2 rounded-lg w-full mt-4" required>

        <input type="email" name="email" placeholder="Email"
            class="bg-white-500 text-black px-4 py-2 rounded-lg w-full mt-4" required>

        <input type="password" name="password" placeholder="Password"
            class="bg-red-500 text-white px-4 py-2 rounded-lg w-full mt-4" required>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg w-full mt-4">Send</button>
    
   
    {{#if error}}
       <p class=" text-red-500 font-bold text-lg my-8">*{{error}}</p>
    {{/if}}
    </form>

</div>