<div class="block mx-auto my-12 p-8 bg-blue w-1/2 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-2xl font-bold mb-8 text-center">Login</h1>

    <form action="" method="POST" class="mt-4">
        <div class="relative mb-4">
            <label for="email" class="absolute left-0 top-1/2 transform -translate-y-1/2">
                <!-- Font Awesome icon -->
                <i class="fas fa-user"></i>
            </label>
            <input type="email" name="email" placeholder="Email" id="email" class="pl-8 pr-4 py-2 w-full rounded-md border border-gray-300 focus:outline-none focus:ring focus:border-blue-500" required>
        </div>

        <div class="relative mb-6">
            <label for="password" class="absolute left-0 top-1/2 transform -translate-y-1/2">
                <i class="fas fa-lock"></i>
            </label>
            <input type="password" name="password" placeholder="Password" id="password" class="pl-8 pr-4 py-2 w-full rounded-md border border-gray-300 focus:outline-none focus:ring focus:border-blue-500" required>
        </div>

        <input type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md w-full mt-4" value="Login">

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-8">*{{error}}</p>
        {{/if}}
    </form>
</div>
